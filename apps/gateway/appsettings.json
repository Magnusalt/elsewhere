{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DefaultWebSettings": {
    "Observability": {
      "Enabled": true,
      "ServiceName": "gateway",
      "OtlpEndpoint": "http://aspire-dashboard:18889"
    }
  },
  "Authentication": {
    "Authority": "http://localhost:8085/realms/Elsewhere",
    "Audience": "elsewhere-web"
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "recommender-api",
        "Match": {
          "Path": "/recommender/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/recommender"
          }
        ]
      },
      "route2": {
        "ClusterId": "studio-api",
        "AuthorizationPolicy": "Travelers",
        "Match": {
          "Path": "/studio/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/studio"
          }
        ]
      },
      "route3": {
        "ClusterId": "embeddings",
        "Match": {
          "Path": "/embeddings/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/embeddings"
          }
        ]
      }
    },
    "Clusters": {
      "recommender-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://recommender-api:8080/"
          }
        }
      },
      "studio-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://studio-api:8080/"
          }
        }
      },
      "embeddings": {
        "Destinations": {
          "destination1": {
            "Address": "http://embeddings:8082/"
          }
        }
      }
    }
  }
}