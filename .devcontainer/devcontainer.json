{
  "name": "Elsewhere Dev",
  "dockerComposeFile": "../infra/compose/docker-compose.dev.yml",
  "service": "web",
  "workspaceFolder": "/workspace/apps/web",
  "forwardPorts": [3000, 8080, 8081, 8082],
  "postCreateCommand": "make bootstrap",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  },
  "remoteEnv": {
    "ASPNETCORE_ENVIRONMENT": "Development",
    "QDRANT_URL": "http://qdrant:6333"
  }
}